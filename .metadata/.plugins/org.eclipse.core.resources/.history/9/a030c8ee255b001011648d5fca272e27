package com.tss.ecommers;

public class FixedDeposit01 {

	private int accountNumber;
	private String name;
	private double principal; 
	private int duration;
	private IFestivalInterest interestCalculator;

	public FixedDeposit01(int accountNumber, String name, double principal, int duration,
			IFestivalInterest interestCalculator) {
		this.accountNumber = accountNumber;
		this.name = name;
		this.principal = principal;
		this.duration = duration;
		this.interestCalculator = interestCalculator;
	}

	public int getAccountNumber() {
		return accountNumber;
	}

	public String getName() {
		return name;
	}

	public double getPrincipal() {
		return principal;
	}

	public int getDuration() {
		return duration;
	}

	public IFestivalInterest getInterestCalculator() {
		return interestCalculator;
	}

	public void setAccountNumber(int accountNumber) {
		this.accountNumber = accountNumber;
	}

	public void setName(String name) {
		this.name = name;
	}

	public void setPrincipal(double principal) {
		this.principal = principal;
	}

	public void setDuration(int duration) {
		this.duration = duration;
	}

	public void setInterestCalculator(IFestivalInterest interestCalculator) {
		this.interestCalculator = interestCalculator;
	}

	public double calculateSimpleInterest() {

		return principal * interestCalculator.getInterestRate() * duration;
	}

	@Override
	public String toString() {
		return "FixedDeposit{" + "accountNumber=" + accountNumber + ", name='" + name + '\'' + ", principal="
				+ String.format("%.2f", principal) + ", duration=" + duration + " years" + ", interestType="
				+ interestCalculator.getClass().getSimpleName() + ", calculatedInterest="
				+ String.format("%.2f", calculateSimpleInterest()) + '}';
	}
}
