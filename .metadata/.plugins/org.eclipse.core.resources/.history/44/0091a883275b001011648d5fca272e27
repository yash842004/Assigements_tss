package com.tss.ecommers;

public class Festival01Test {

	public static void main(String[] args) {
		System.out.println("--- Fixed Deposit Interest Calculation (OCP Demo) ---");

		FixedDeposit01 fd1 = new FixedDeposit01(101, "Ajay", 1000.0, 2, new DiwaliInterest());
		System.out.println("Fixed Deposit 1 (Diwali): " + fd1);
		System.out.println("Interest earned: " + String.format("%.2f", fd1.calculateSimpleInterest()));

		System.out.println("\n--- Adding a new festival type without modifying FixedDeposit ---");

		FixedDeposit01 fd2 = new FixedDeposit01(102, "Bina", 5000.0, 3, new HoliInterest());
		System.out.println("Fixed Deposit 2 (Holi): " + fd2);
		System.out.println("Interest earned: " + String.format("%.2f", fd2.calculateSimpleInterest()));

		System.out.println("\n--- Demonstrating Flexibility with OCP ---");
		fd1.setInterestCalculator(new HoliInterest());
		System.out.println("Fixed Deposit 1 (now with Holi Interest): " + fd1);
		System.out.println("New interest earned: " + String.format("%.2f", fd1.calculateSimpleInterest()));

	}
}
