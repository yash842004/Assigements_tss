package com.tss.abstractFactory.test;

import java.util.Scanner;

import com.tss.abstractFactory.ICar;
import com.tss.abstractFactory.ICarFactory;
import com.tss.abstractFactory.MahindraFactory;
import com.tss.abstractFactory.MarutiFactory;
import com.tss.abstractFactory.TataFactory;

public class CarTest {

	public static void main(String[] args) {

		ICarFactory marutiFactory = new MarutiFactory();
		ICar maruti = marutiFactory.makeCar();
		ICarFactory tataFactory = new TataFactory();
		ICar tata = marutiFactory.makeCar();
		ICarFactory mahindraFactory = new MahindraFactory();
		ICar mahindra = mahindraFactory.makeCar();
		
		maruti.start();
		maruti.stop();
		
		
		
		
		Scanner scanner = new Scanner(System.in);
		System.out.println("Enter the brank");
		System.out.println("1 for maruti");
		System.out.println("2 for tata");
		System.out.println("3 the mahindra");

		int choise = scanner.nextInt();
		
		switch(choise) {
		
		case 1:{
			marutiFactory.makeCar();
		}
		case 2:{
			tataFactory.makeCar();
		}
		case 3:{
			mahindraFactory.makeCar();
			
		}
		}
		
		
	}

}
