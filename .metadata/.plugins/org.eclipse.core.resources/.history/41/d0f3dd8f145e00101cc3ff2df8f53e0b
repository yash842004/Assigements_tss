package com.tss.builder;

public class Requirments {

	private int bedRooms;
	private int bathRooms;
	private int hall;

	private int DrawRooms; // optional

	public Requirments(int bedRooms, int bathRooms, int hall) {

		if (bedRooms == 0 || bathRooms == 0 || hall == 0) {
			System.out.println("Required things are remaining :{");
		}
		this.bedRooms = bedRooms;
		this.bathRooms = bathRooms;
		this.hall = hall;

	}

	public Requirments notImportant(int DrawRooms) {
		this.DrawRooms = DrawRooms;

		System.out.println("DrawRooms");
		return this;

	}
	
	
	public Home buidl() {
		return new Home(this);
	}

}
